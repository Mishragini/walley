generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account{
  id           String  @id@default(uuid())
  accountIndex Int     @unique
  userId       String 
  user         User    @relation(fields:[userId],references:[id])
  ethPublicKey String?
  solPublicKey String? 
}

model User{
  id       String   @id@default(uuid())
  email    String   @unique
  password String  
  accounts  Account[]
}
